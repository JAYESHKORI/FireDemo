<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jayesh.firedemo.ProfileActivity">

    <TextView
        android:text="User Email will be Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/tvUserEmail" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSaveInfo"
        android:layout_alignBottom="@+id/btnSaveInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="logout" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLogout"
        android:layout_alignRight="@+id/btnLogout"
        android:layout_below="@+id/tvUserEmail"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEnrollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etFullName"
        android:layout_alignRight="@+id/etFullName"
        android:layout_below="@+id/etFullName"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enroll No"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSaveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEnrollNo"
        android:layout_marginTop="79dp"
        android:layout_toLeftOf="@+id/tvUserEmail"
        android:layout_toStartOf="@+id/tvUserEmail"
        android:text="Save " />

</RelativeLayout>
